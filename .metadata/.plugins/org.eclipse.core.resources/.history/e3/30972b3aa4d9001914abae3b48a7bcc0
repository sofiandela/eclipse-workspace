package ar.edu.edu.pb1.trabajopractico01;

public class Letra {
	
	private char caracter;
	
	public Letra(char caracter) {
		this.caracter = caracter;
	}
	//CHAR CHARACTER es una variable "nueva"que va a devolver algo
	
	public void esVocal(char caracter) {
		boolean resultado;
		switch(caracter) {
		case 'a':
			resultado = true;

		case 'e':
			resultado = true;

		case 'i':
			resultado = true;
		case 'o':
			resultado = true;

		case 'u' :
			resultado = true;
			
		default:
			resultado = true;
			
		}
		
	}
	
	

	
	
}